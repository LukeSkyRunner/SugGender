  <label for="Wage">Annual Income</label>
    <input class="form-control" type="number" name="Wage" id="Wage" placeholder="For example: 23000"/>
</div>

<div class="form-group">
  <label for="Sector">Sector</label>
   <select class="form-control" name="Sector" id="Sector">
    <option value="Agriculture, Forestry, Fishing & Hunting">Agriculture, Forestry, Fishing & Hunting</option>
    <option value="Mining, Quarrying, & Oil & Gas Extraction">Mining, Quarrying, & Oil & Gas Extraction</option>
