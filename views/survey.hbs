    <option value="Arts, Entertainment & Recreation">Arts, Entertainment & Recreation</option>
    <option value="Accommodation & Food Services">Accommodation & Food Services</option>
    <option value="Other Sector">Other Sector</option>
  </select>
</div>
 
<div class="form-group">
  <label for="Education">Education</label>
    <select class="form-control" name="Education" id="Education">
      <option value="High school or less">High school or less</option>
      <option value="Bachelor's degree">Bachelor's degree</option>
      <option value="Master's degree">Master's degree</option>
      <option value="Doctorate Degree">Doctorate Degree</option>
      <option value="Other">Other</option>
    </select>
</div>

<div class="form-group">
  <label for="Managerial">Managerial Role</label>
    <select class="form-control" name="Managerial" id="Managerial">
      <option value="I don't manage a team">I don't manage a team</option>
      <option value="I manage a team with 1 to 5 people">I manage a team with 1 to 5 people</option>
      <option value="I manage a team with 6 to 10 people">I manage a team with 6 to 10 people</option>
      <option value="I manage a team with more than 10 people">I manage a team with more than 10 people</option>
    </select>
</div>

<div class="form-group">
  {{!-- <label for="Perception">Perception</label> --}}
    <div class="slidecontainer">
      <p>How large do you think is the gender gap in your country?</p>
      <input type="range" min="-50" max="50" value="0" class="slider" id="myRange" name="Perception">
      <h6 id="slider-value"></h6>

    </div>
</div>

<button type="submit" class="btn btn-outline-secondary btn-form-submit">Submit</button>
</form>

<script>
var slider = document.getElementById("myRange");
var output = document.getElementById("slider-value");
// output.innerHTML = slider.value + '%';

slider.oninput = function() {
  if(this.value < 0) {
    output.innerHTML = "Women receive " + Math.abs(this.value) + '% more than men.';
  } else if(this.value > 0) {
  output.innerHTML = "Women receive " + this.value + '% less than men.';
  }
}

